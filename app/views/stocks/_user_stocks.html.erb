<table class="table table-striped">

  <thead>
    <tr>
      <th>Name</th>
      <th>Symbol</th>
      <th>Current Price</th>
      <%= content_tag :th, "Actions" if @user == current_user %>
    </tr>
  </thead>

  <tbody>
    <% @stocks.each do |user_stock| %>
      <tr>
        <td><%= user_stock.name %></td>
        <td><%= user_stock.ticker %></td>
        <td><%= user_stock.last_price %></td>

        <% if @user == current_user %>
          <td><%= link_to "Stop tracking",
                          user_stock_path(user_stock),
                          method: :delete,
                          data: { confirm: "Are you sure?" },
                          class: "btn btn-danger btn-xs" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>

</table>

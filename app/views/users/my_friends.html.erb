<% if @friendships.size > 0 %>

  <table class="table table-striped">

    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @friendships.each do |friend| %>
        <tr>
          <td><%= link_to friend.full_name, user_path(friend) %></td>
          <td><%= friend.email %></td>

          <td><%= link_to "Remove from friends",
                          friendship_path(friend),
                          method: :delete,
                          data: { confirm: "Are you sure?" },
                          class: "btn btn-danger btn-xs" %></td>
        </tr>
      <% end %>
    </tbody>

  </table>

<% else %>

  <div class="row col-lg-12">
    <p class="lead">You don't have any friends yet.</p>
  </div>

<% end %>

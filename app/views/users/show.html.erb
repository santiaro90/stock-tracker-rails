<h2><%= @user.first_name %></h2>

<dl class="dl-horizontal">
  <dt><strong>Full Name</strong></dt>
  <dd><%= @user.full_name %></dd>

  <dt><strong>Email</strong></dt>
  <dd><%= @user.email %></dd>
</dl>

<% if @stocks.any? %>
  <div class="stock-list row">
    <div class="col-xs-12">
      <%= render "stocks/user_stocks" %>
    </div>
  </div>
<% else %>
  <p class="lead"><%= @user.first_name %> is not tracking any stocks</p>
<% end %>
